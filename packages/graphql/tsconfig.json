{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": false,
    "module": "CommonJS",
    "plugins": [
      // Transform paths in output .js files
      { "transform": "typescript-transform-paths" }
    ],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
